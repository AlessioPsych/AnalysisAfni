#!/bin/bash

#ROINAME='LEFTV1.1D.roi'
#BOUNDARY='boundary05'
#ANAT='anatomy_crop.nii.gz'
#DEPTH='continous_depth.nii.gz'

ROINAME=$1
BOUNDARY=$2
ANAT=$3
DEPTH=$4

if [ -z "$1" ]
then
echo 'computes ROI in volume space from surface space'
echo 'Inputs:'
echo 'ROINAME=$1, e.g. LEFTV1.1D.roi'
echo 'BOUNDARY=$2, e.g. boundary05, generated by generateSurfaces.sh'
echo 'ANAT=$3, e.g. anatomy_crop.nii.gz'
echo 'DEPTH=$4, e.g. continous_depth.nii.gz, from MIPAV'
exit 1
fi


Rscript $AFNI_TOOLBOXDIR/surfaces/surf2VolRoi01.R \
 $ROINAME \
 $BOUNDARY \
 $DEPTH \
 $AFNI_INSTALLDIR \
 $AFNI_TOOLBOXDIRSURFACES
